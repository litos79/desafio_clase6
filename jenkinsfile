pipeline {
    agent any 

    stages {
        stage ('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

              stage('Lint Test') {
            steps {
                echo 'run lint'
            }
        }

              stage('Test Application') {
            steps {
                sh 'npm run test'
            }
        }
           
           stage('Run Sonar') {
            steps {
                sh 'npm run sonar'
            }
        }
            
            stage('Build Application') {
            steps {
                sh 'npm run build'
            }
        }

            stage('Initialize Web Server') {
            steps {
                sh 'service nginx start'
            }
        }
    }
}
